<div>
    <h3>
        <span class="fa fa-edit"></span>
        {{ "Collect Matched Student Responses"|trans }}
    </h3>
    <p>{{ "Use this interface to compare responses between two surveys, or subclasses of surveys."|trans }}</p>
    {{ showflashes() }}
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <fieldset>
        <legend>{{ "Presurvey"|trans }}</legend>
        <p>Select the presurvey from the database or upload a file.</p>
        {{ form_row(form.survey1) }}
    </fieldset>
    <fieldset>
        <legend>{{ "Postsurvey"|trans }}</legend>
        <p>Select the post-survey from the database or upload a file.</p>
        {{ form_row(form.survey2) }}
    </fieldset>
    <div class="col-lg-offset-3 col-lg-9">
        {{ form_widget(form.add, {'attr': {'class': 'btn btn-success'}}) }}
    </div>
    {{ form_end(form) }}
</div>