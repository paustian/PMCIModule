{{ render(controller('ZikulaAdminModule:Admin:adminheader')) }}
<div class="container-fluid">
    {{ showflashes() }}
    <h3>{{ __('Edit a Person') }}</h3>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ __('Person') }}</th>
            <th> {{ __('Actions') }} </th></tr>
        </thead>
        <tbody>
        {% for person in people %}
            <tr>
                <td>{{ person.name }}</td>
                <td class="actions">
                    <a href="{{ path('paustianpmcimodule_person_edit', { person: person.id }) }}" class="fa fa-pencil" title="{{ __('Edit a person') }}"></a>
                    <a href="{{ path('paustianpmcimodule_person_delete', { person: person.id }) }}" class="fa fa-trash-o" title="{{ __('Delete a person') }}" onclick="return confirm('Are you sure you want to delete this person?')"></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>