{{ showflashes() }}
<h3>{{ "Edit a Person"|trans }}</h3>
<table class="table table-striped">
    <thead>
    <tr>
        <th>{{ "Person"|trans }}</th>
        <th> {{ "Actions"|trans }} </th>
    </tr>
    </thead>
    <tbody>
    {% for person in people %}
        <tr>
            <td>{{ person.name }}</td>
            <td class="actions">
                <a href="{{ path('paustianpmcimodule_person_edit', { person: person.id }) }}" class="fas fa-edit"
                   title="{{ "Edit a person"|trans }}"></a>
                <a href="{{ path('paustianpmcimodule_person_delete', { person: person.id }) }}" class="fas fa-trash"
                   title="{{ "Delete a person"|trans }}"
                   onclick="return confirm('Are you sure you want to delete this person?')"></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
