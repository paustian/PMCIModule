{{ showflashes() }}
<h3>{{ "Chose a Survey to Edit or Delete"|trans }}</h3>
<table class="table table-striped">
    <thead>
    <tr>
        <th>{{ "Survey Institution"|trans }}</th>
        <th>{{ "Survey Course"|trans }}</th>
        <th>{{ "Survey Pre/Post"|trans }}</th>
        <th>{{ "Survey Date"|trans }}</th>
        <th> {{ "Actions"|trans }} </th>
    </tr>
    </thead>
    <tbody>
    {% for survey in surveys %}
        <tr>
            <td>{{ survey.institution }}</td>
            <td>{{ survey.course }}</td>
            {% if survey.prePost %}
                <td>Post-survey</td>
            {% else %}
                <td>Pre-survey</td>
            {% endif %}
            <td>{{ survey.surveyDate|date("m/d/Y") }}</td>
            <td class="actions">
                <a href="{{ path('paustianpmcimodule_survey_edit', { survey: survey.id }) }}" class="fa fa-pencil"
                   title="{{ "Edit a survey"|trans }}"></a>
                <a href="{{ path('paustianpmcimodule_survey_delete', { survey: survey.id }) }}" class="fa fa-trash-o"
                   title="{{ "Delete a Survey"|trans }}"
                   onclick="return confirm('Are you sure you want to delete this survey? Doing so will delete all survey responses')"></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
